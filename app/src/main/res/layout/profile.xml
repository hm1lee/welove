<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.js.firebaseauthentication.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="66dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="23dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_24dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="125dp"
            android:layout_marginRight="125dp"
            android:layout_marginBottom="23dp"
            android:text="마이페이지"
            android:textSize="35sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/bar"
        android:layout_width="408dp"
        android:layout_height="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="4dp"
        android:background="#D3D3D3"
        android:text=" "
        android:textSize="35sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:id="@+id/textviewUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGOUT" />

            <TextView
                android:id="@+id/textviewDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:text="회원탈퇴"
                android:textColor="@color/colorAccent" />


        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/users1"
            android:layout_width="107dp"
            android:layout_height="41dp"
            android:background="#D3D3D3"
            android:gravity="center"
            android:text="정보수정"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/users2"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:background="#D3D3D3"
            android:gravity="center"
            android:text="보유하는 쿠폰"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/users3"
            android:layout_width="131dp"
            android:layout_height="41dp"
            android:background="#D3D3D3"
            android:gravity="center"
            android:text="리뷰목록"
            android:textSize="25sp" />
    </LinearLayout>
        <TextView
            android:id="@+id/usersassist"
            android:layout_width="411dp"
            android:layout_height="34dp"
            android:background="#D3D3D3"
            android:text="  고객지원"
            android:textSize="23sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/usersassist1"
            android:layout_width="411dp"
            android:layout_height="34dp"
            android:text="  제안/의견 보내기"
            android:textSize="23sp"/>
        <TextView
            android:id="@+id/usersassist2"
            android:layout_width="411dp"
            android:layout_height="34dp"
            android:text="  이용자 약관"
            android:textSize="23sp"/>
        <TextView
            android:id="@+id/usersassist3"
            android:layout_width="411dp"
            android:layout_height="34dp"
            android:text="  개인정보 처리방침"
            android:textSize="23sp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/userask"
                android:layout_width="411dp"
                android:layout_height="34dp"
                android:background="#D3D3D3"
                android:text="  제휴문의"
                android:textSize="23sp"/>
            <TextView
                android:id="@+id/userask1"
                android:layout_width="415dp"
                android:layout_height="44dp"
                android:text="  가맹점/제휴 문의"
                android:textSize="23sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>